# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   controllers.Application.welcome() 
POST    /                                   controllers.Application.welcome()   
GET     /ViewBlog                           controllers.Application.viewblog()
POST     /ViewBlog                           controllers.Application.viewblog()
GET     /Register                          controllers.Application.register()
POST     /Register                           controllers.Application.register()
GET     /Login                          controllers.Application.login()
POST     /Login                           controllers.Application.login()
GET     /Logout                           controllers.Application.logout()
POST     /Logout                           controllers.Application.logout()
GET     /WriteBlog                           controllers.Application.writeblog()
POST     /WriteBlog                           controllers.Application.writeblog()
GET     /SaveBlog                           controllers.Application.saveblog()
POST     /SaveBlog                           controllers.Application.saveblog()
GET     /Setting                           controllers.Application.setting()
POST     /Setting                           controllers.Application.setting()
GET     /RSSNews                        controllers.Application.rssnews()
POST     /RSSNews                           controllers.Application.rssnews()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
